<h1>
    <%= @room.room_name %>
</h1>

<div>
    <% @chats.each do |chat| %>
        <div class='chat_box'>
            <div class='user_box'>
                <%= chat.user.user_name %>
                <%= chat.created_at %>
            </div>
            <p><%= chat.chat_text.content %></p>
        </div>
    <% end %>
</div>

<div>
    <%= render 'form', chat_text: @chat_text, path_to_post: record_chat_room_path %>
</div>